el":451},"https://esciencecenter-digital-skills.github.io/research-software-support/",[280],[453],{"type":25,"value":454},"existing content",{"type":25,"value":456},".",{"type":15,"tag":41,"props":458,"children":459},{},[460,467],{"type":15,"tag":276,"props":461,"children":464},{"href":462,"rel":463},"https://github.com/esciencecenter-digital-skills/research-software-support/issues",[280],[465],{"type":25,"value":466},"Provide feedback",{"type":25,"value":468}," on the different subjects covered: what did we miss? Should something be restructured?",{"title":7,"searchDepth":299,"depth":299,"links":470},[471],{"id":355,"depth":299,"text":358,"children":472},[473],{"id":367,"depth":474,"text":370},3,"local_fs:main:contribute.md","main/contribute.md",1715800932370]